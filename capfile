    end
  end

  namespace :authdaemon do
    task :default, :roles => :mail do
      sudo 'env DEBIAN_FRONTEND=noninteractive apt-get -y update'
      sudo 'env DEBIAN_FRONTEND=noninteractive apt-get -y install courier-authlib courier-authdaemon'
